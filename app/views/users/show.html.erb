<nav class="dark" style="position:fixed; z-index:1000;">
  <div class="nav-wrapper">
    <% if current_user %>
    <a href="/songs"><h4 class="_logo">DOJO<span>PLAYLIST</span></h2></a>
    <!--<a href="/songs"><h4 class="_logo"><user.first_name %><span>PLAYLIST</span></h2></a>-->
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li><a href="/songs">Dashboard</a></li>
      <li><%= link_to "Log out", "/logout", data: { method: :delete, confirm: "Are you sure?"} %></li>
    </ul>
    <% end %>
  </div>
</nav>

<div class="container-info">

    <h2><span class="white-text"><%= @this_user %>'s</span> Playlist</h2>

    <div class="scrolling-wrapper">
      <table class="highlight">
          <thead>
          <tr class="trheader">
            <th class="">Artist     </th>
            <th class="">Title      </th>
            <th class="">Times Added</th>
            <% if current_user.id == @user.id %>
	    <td class="">Actions    </td>
             <% end %>
          </tr>
          </thead>
          <tbody>
            <% @user.songs_added.select(:artist, :title, :id).group(:artist, :title, :id).having("count(*) >= 1").size.each do |key, value| %>
            <tr class="trbody usr">
                <td><%= key[0] %></td>
                <td><%= key[1] %></td>
                <td><%= value %></td>
                <% if current_user.id == @user.id %>
                <td>
                  <form action="/playlist/<%= key[2] %>" method="post">
                    <input type="hidden" name="_method" value="delete" />
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                    <input type="submit" value="Remove" from playlist"" class="btn-small delete-one">
                  </form>
                  <form id="delete_all" action="/playlist/<%= key[2] %>/all" method="post">
                    <input type="hidden" name="_method" value="delete" />
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                    <input type="submit" value="Remove All" from playlist"" class="btn-small delete-all">
                  </form>
                </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
</div>
