<!--
[ Navbar - Main Component ]
-->
<nav class="dark" style="position:fixed; z-index:1000;">
  <div class="nav-wrapper">
    <% if current_user %>
    <a href="/songs"><h4 class="_logo">DOJO<span>PLAYLIST</span></h2></a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li><a href="/users/<%= current_user.id %>" class="grey-text"><span class="light-blue-text"><%= current_user.first_name %></span>Playlist</a>
      <!--<li><a href="#addform">Add a Song</a></li>-->
      <li><a href="/songs/new">Add a Song</a></li>
      <li><%= link_to "Log out", "/logout", data: { method: :delete, confirm: "Are you sure?"} %></li>
    </ul>
    <% end %>
  </div>
</nav>

<div class="container-add">

    <!--
    [ Error Display... if any ]
    -->
    <% if flash[:errors] %>
    <div id="error_explanation" class="" style="margin-bottom:0;">
      <h5>
        <span class="blue-text"><%= pluralize(flash[:errors].count, "error") %></span>
        prohibited this user from being saved:
      </h5>
        <ul>
          <% flash[:errors].each do |message| %>
          <li class="red-text"><span class="blue-text right-margin1">&#187;</span><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col s6">
    <!--
    Redirect to Create New Dojo Page
    -->
    <h2 style="margin-top:1.2rem;">
      A<span class="white-text">DD </span>
      N<span class="white-text">EW </span>
      S<span class="white-text">ONG</span>
   </h2>

    <div class="row">
      <form id="addform" class="col s12" action="/songs" method="POST">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

          <div class="rows">
              <div class="input-field col s12 col-sm-12">
                  <input placeholder="" id="title" name="song[title]" type="text" class="validate white-text" value="Thriller" style="font-size:16px;">
                  <label for="name">Title</label>
              </div>
          </div>
          <div class="rows">
              <div class="input-field col s12 col-sm-12">
                  <input placeholder="" id="artist" name="song[artist]" type="text" class="validate white-text" value="Michael Jackson" style="font-size:16px;">
                  <label for="name">Artist</label>
              </div>
          </div>

          <div class="rows">
            <div class="input-field col s12 col-sm-12">
              <button class="btn waves-effect sn" style="margin-top:11rem;" type="submit" name="action">Add Song
                <i class="material-icons right blue-text">send</i>
              </button>
            </div>
          </div>
      </form>

      </div>
    </div>
</div>
